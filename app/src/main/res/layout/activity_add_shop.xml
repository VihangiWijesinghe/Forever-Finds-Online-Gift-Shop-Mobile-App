<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B8E4B9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShop">


    <ImageView
        android:id="@+id/product_image_adds"
        android:layout_width="184dp"
        android:layout_height="159dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/itm" />

    <TextView
        android:id="@+id/product_name_adds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image_adds"
        android:text="Product Name"
        android:textSize="25dp"
       android:textColor="#0f0c0c"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/product_des_adds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_adds"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#0f0c0c"
        android:text="Product Description"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/product_price_adds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_des_adds"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Product Price"
        android:textColor="#0f0c0c"
        android:textSize="20dp" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
       android:id="@+id/number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:finalNumber="5"
        app:initialNumber="1"
        app:textSize="10dp"
        app:backGroundColor="@color/colorAccent"
        android:layout_below="@+id/product_price_adds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/btn_addProduct_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="6dp"
        android:text="ADD TO CART"
        android:textColor="#ffff"
        android:textSize="18sp">

    </Button>


</RelativeLayout>